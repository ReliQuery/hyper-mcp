{
  // Schema reference for Renovate configuration
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  
  // Extend the base configuration
  "extends": [
    "config:base"
  ],
  
  // Run updates every Monday
  "schedule": ["on monday"],
  
  // Package-specific rules
  "packageRules": [
    // Pin GitHub Actions to immutable SHAs.
    {
      matchDepTypes: ["action"],
      pinDigests: true,
    },
    // Annotate GitHub Actions SHAs with a SemVer version.
    {
      extends: ["helpers:pinGitHubActionDigests"],
      extractVersion: "^(?<version>v?\\d+\\.\\d+\\.\\d+)$",
      versioning: "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$",
    },
    {
      // GitHub Actions specific rules
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "labels": ["dependencies", "github-actions"],
      "commitMessagePrefix": "github-actions"
    },
    {
      // Rust dependencies specific rules
      "matchManagers": ["cargo"],
      "groupName": "Rust dependencies",
      "labels": ["dependencies", "rust"],
      "commitMessagePrefix": "rust"
    }
  ],
  
  // Rate limiting for PR creation
  "prHourlyLimit": 4,
  "prConcurrentLimit": 16,
  
  // Enable dependency dashboard for better visibility
  "dependencyDashboard": true
} 