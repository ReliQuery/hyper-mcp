{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["plugins"],
  "properties": {
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1,
            "pattern": "^(http|https|oci://|/|\\./|\\.\\./).*"
          },
          "runtime_config": {
            "type": "object",
            "properties": {
              "allowed_host": {
                "type": "string"
              },
              "allowed_paths": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
} 